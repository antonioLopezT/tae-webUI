{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "array",
  "title": "The Root Schema",
  "items": {
    "$id": "#/items",
    "type": "object",
    "title": "The Items Schema",
    "required": [
      "postId",
      "id",
      "name",
      "email",
      "body"
    ],
    "properties": {
      "postId": {
        "$id": "#/items/properties/postId",
        "type": "integer"
      },
      "id": {
        "$id": "#/items/properties/id",
        "type": "integer"
      },
      "name": {
        "$id": "#/items/properties/name",
        "type": "string"
      },
      "email": {
        "$id": "#/items/properties/email",
        "type": "string"
      },
      "body": {
        "$id": "#/items/properties/body",
        "type": "string"
      }
    }
  }
}